<% @grandmas.each do |grandma|  %>
<div class="grandma">
    <div class="grandma-image" style="background: linear-gradient(to bottom,rgba(20,20,20, 0.8),rgba(76,76,76,0.2) 30%), url(<%= image_path ('grandma-avatar.jpg') %>) center / cover no-repeat;"></div>
    <div class="grandma-content">
      <div class="grandma-name"><%= grandma.name %>
      </div>
      <div class="grandma-description">
        <%= grandma.description %>
      </div>
      <div class="grandma-booking">
        <%= link_to "View Details", "#", class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>
<% end %>

