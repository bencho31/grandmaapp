<div class="container">
  <div class="form_container text-left card-content">
      <%= image_tag user_avatar(current_user), class: "avatar-bordered-large justify-center" %>
      <div class="form-group justify-center ">
       <h3> Make your profile </h3>
      <%= simple_form_for @user, url: dashboard_path, method: :patch do |f| %>
        <%= f.input :name %>
        <%= f.input :about  %>
        <%= f.input :address %>
        <%= f.input :photo %>
       <%= f.input :photo_cache, as: :hidden %>
      </div>
      <div class="form-group">
       <div>
        <%= f.button :submit, class: "btn  btn-danger center-block" %>
       </div>
      </div>
    <% end %>
  </div>
</div>
